public class MinutesToYearsDays {
    public static void main(String[] args) {
        long minutes = 1000000; // Example input
        convertMinutes(minutes);
    }

    public static void convertMinutes(long minutes) {
        long minutesInYear = 525600;
        long minutesInDay = 1440;

        long years = minutes / minutesInYear;
        long days = (minutes % minutesInYear) / minutesInDay;

        System.out.println(minutes + " minutes is approximately " + years + " years and " + days + " days.");
    }
}
